<%- include ('partials/header') %>

  <div class="container-fluid py-2 bg-white">
    <h1>Students</h1>
  </div>

  <div class="jumbotron">
    <table class="table table-striped table-hover table-bordered table-responsive-md">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Student</th>
      <th scope="col">Class</th>
      <th scope="col">School</th>
      <th scope="col">Mobile</th>
    </tr>
  </thead>
  <tbody>
  <% students.forEach(function(student){ %>
    <tr>
      <th scope="row"><a href="/student/<%= student.username %>"><%= student.username.toUpperCase() %></th>
      <th scope="row"><%= student.class %></th>
      <td><%= student.school %></td>
      <td><%= student.mobile %></td>
    </tr>
 <% }) %>
  </tbody>
  </table>
  </div>

 <div class="container">
  <a type="submit" class="btn btn-primary" href="/register">Register New Student</a>
 </div>

<%- include ('partials/footer') %>