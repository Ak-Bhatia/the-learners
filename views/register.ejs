<%- include ('partials/header') %>

<div class="container">

<div class="container-fluid py-2 bg-white">
	<h1>Register</h1>
</div>

<div class="jumbotron">
<form action = "/register" method = "POST">
  <div class="form-group">
    <label for="exampleInputUsername">Username</label>
    <input type="text" name="username" required class="form-control" placeholder="Enter Username">
  </div>
  <div class="form-group">
    <label for="exampleInputpassword">Password</label>
    <input type="password" name="password" required class="form-control" placeholder="Enter Password">
  </div>
  <div class="form-group">
    <label for="exampleInputschool">School</label>
    <input type="text" name="school" required class="form-control" placeholder="Enter School">
  </div>
  <div class="form-group">
    <label for="exampleInputClass">Class</label>
    <input type="text" name="class" required class="form-control" placeholder="Enter Class">
  </div>
  <div class="form-group">
    <label for="exampleInputMobile">Mobile No.</label>
    <input type="text" name="mobile" required class="form-control" placeholder="Mobile No.">
  </div>
  <div class="form-group">
    <label for="exampleInputAdminCode">Admin Code(if any)</label>
    <input type="password" name="admincode" class="form-control" placeholder="Admin Code">
  </div>
  <button type="submit" class="btn btn-primary">Register New Student</button>
</form>
</div>
</div>

<%- include ('partials/footer') %>